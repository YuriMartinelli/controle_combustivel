<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- List View (Odoo 19 - usando tag <list>) -->
        <record id="view_fuel_supply_list" model="ir.ui.view">
            <field name="name">fuel.supply.list</field>
            <field name="model">fuel.supply</field>
            <field name="arch" type="xml">
                <list string="Abastecimentos" default_order="date desc">
                    <field name="name" optional="show"/>
                    <field name="vehicle_id" widget="badge" decoration-info="1"/>
                    <field name="date"/>
                    <field name="odometer" optional="show"/>
                    <field name="liters" sum="Total de Litros"/>
                    <field name="price_unit" optional="show"/>
                    <field name="amount_total" sum="Total Geral"/>
                    <field name="driver_id" optional="show"/>
                    <field name="fuel_tank_id" optional="hide"/>
                    <field name="state" widget="badge" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_fuel_supply_form" model="ir.ui.view">
            <field name="name">fuel.supply.form</field>
            <field name="model">fuel.supply</field>
            <field name="arch" type="xml">
                <form string="Abastecimento">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informações do Abastecimento">
                                <field name="vehicle_id" options="{'no_create': True}"/>
                                <field name="date"/>
                                <field name="odometer"/>
                                <field name="fuel_tank_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Valores">
                                <field name="liters"/>
                                <field name="price_unit"/>
                                <field name="amount_total" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Responsáveis">
                                <field name="user_id" options="{'no_create': True}"/>
                                <field name="driver_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                        <group string="Observações">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_fuel_supply_search" model="ir.ui.view">
            <field name="name">fuel.supply.search</field>
            <field name="model">fuel.supply</field>
            <field name="arch" type="xml">
                <search string="Pesquisar Abastecimentos">
                    <field name="name" string="Referência"/>
                    <field name="vehicle_id" string="Veículo"/>
                    <field name="driver_id" string="Motorista"/>
                    <field name="fuel_tank_id" string="Tanque"/>
                    
                    <!-- Filtros -->
                    <filter string="Rascunho" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmados" name="filter_confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Cancelados" name="filter_cancelled" domain="[('state', '=', 'cancelled')]"/>
                    
                    <separator/>
                    
                    <filter string="Hoje" name="filter_today" 
                            domain="[('date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)), 
                                     ('date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                    <filter string="Esta Semana" name="filter_week" 
                            domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                     ('date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="Este Mês" name="filter_month" 
                            domain="[('date', '&gt;=', datetime.datetime.now().replace(day=1, hour=0, minute=0, second=0))]"/>
                    
                    <separator/>
                    
                    <!-- Filtro por veículo -->
                    <filter string="Por Veículo" name="filter_by_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    
                    <!-- Agrupamentos -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Veículo" name="group_vehicle" context="{'group_by': 'vehicle_id'}"/>
                        <filter string="Motorista" name="group_driver" context="{'group_by': 'driver_id'}"/>
                        <filter string="Tanque" name="group_tank" context="{'group_by': 'fuel_tank_id'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <separator/>
                        <filter string="Data (Dia)" name="group_date_day" context="{'group_by': 'date:day'}"/>
                        <filter string="Data (Semana)" name="group_date_week" context="{'group_by': 'date:week'}"/>
                        <filter string="Data (Mês)" name="group_date_month" context="{'group_by': 'date:month'}"/>
                        <filter string="Data (Ano)" name="group_date_year" context="{'group_by': 'date:year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_fuel_supply" model="ir.actions.act_window">
            <field name="name">Abastecimentos</field>
            <field name="res_model">fuel.supply</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_filter_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registre um novo abastecimento
                </p>
                <p>
                    Clique em "Novo" para registrar um abastecimento de veículo ou equipamento.
                    O sistema irá automaticamente descontar o combustível do tanque selecionado.
                </p>
            </field>
        </record>

    </data>
</odoo>
